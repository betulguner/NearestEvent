<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".ForgotPassword">


    <EditText
        android:id="@+id/editTextForgotPswEmail"
        android:layout_width="305dp"
        android:layout_height="66dp"
        android:ems="10"
        android:hint="Enter your Email address"
        android:inputType="textEmailAddress"
        android:textColor="#958484"
        android:textColorHint="#958484"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ForgotPsw"
        app:layout_constraintVertical_bias="0.23" />

    <TextView
        android:id="@+id/ForgotPsw"
        android:layout_width="416dp"
        android:layout_height="60dp"
        android:fontFamily="sans-serif-black"
        android:text="FORGOT PASSWORD"
        android:textAlignment="center"
        android:textColor="#958484"
        android:textSize="38sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.235" />

    <Button
        android:id="@+id/btnSendEmail"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:backgroundTint="#310761"
        android:text="Send Email"
        android:textColor="#958484"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextForgotPswEmail"
        app:layout_constraintVertical_bias="0.204" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:backgroundTint="#310761"
        android:onClick="cancelForgot"
        android:text="Cancel"
        android:textColor="#958484"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSendEmail"
        app:layout_constraintVertical_bias="0.157" />


</androidx.constraintlayout.widget.ConstraintLayout>